@model IEnumerable<store.Models.users>

@{
    ViewData["Title"] = "Index";
}

<div class="row justify-content-md-center">
    <div class="card col-12">
        <div class="row">
            <div class="card-header bg-dark text-white col-12">
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-info"><i class="fas fa-plus-circle"></i> Add</a>
            </div>
            <div class="col-sm-12 text-center mt-1">
                <table id="DataTable" class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FirsName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LastName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FirsName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-user-edit text-info"></i></a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash text-danger"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>        
    </div>
</div>