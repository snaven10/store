@model store.Models.users

@{
    ViewData["Title"] = "Edit";
}

<div class="row justify-content-md-center">
    <div class="card col-12">
        <div class="row">
            <div class="card-header bg-dark text-white col-12">
                <h4>Edit Users</h4>
            </div>
            <div class="col-sm-12 mt-1">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <label asp-for="FirsName" class="control-label"></label>
                                <input asp-for="FirsName" class="form-control" />
                                <span asp-validation-for="FirsName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <label asp-for="LastName" class="control-label"></label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="row">
                                <div class="col-4">
                                    <div class="form-group">
                                        <label asp-for="Email" class="control-label"></label>
                                        <input asp-for="Email" class="form-control" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <a asp-action="Index" class="btn btn-danger">Cancelar</a>
                        <input type="submit" value="Actualizar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
