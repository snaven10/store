@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}



<div class="row justify-content-md-center">
    <div class="card col-12">
        <div class="row">
            <div class="card-header bg-dark text-white col-12">
                <h1>@ViewData["Title"] User</h1>
            </div>
            <div class="col-sm-12 mt-1">
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="col-12">
                        <div class="row">
                            <div class="col-4">
                                <div class="row">
                                    <div class="form-group col-12">
                                        <label asp-for="Input.FirsName"></label>
                                        <input asp-for="Input.FirsName" class="form-control" />
                                        <span asp-validation-for="Input.FirsName" class="text-danger"></span>
                                    </div>
                                </div>                                
                            </div>
                            <div class="col-4">
                                <div class="row">
                                    <div class="form-group col-12">
                                        <label asp-for="Input.LastName"></label>
                                        <input asp-for="Input.LastName" class="form-control" />
                                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                    </div>
                                </div>                                
                            </div>
                            <div class="col-4">
                                <div class="row">
                                    <label asp-for="Input.role"></label>
                                    <select asp-for="Input.role" class="form-control">
                                        <option value="ADMIN">Admin</option>
                                        <option value="NORMAL">Normal</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="row">
                            <div class="col-6">
                                <div class="row">
                                    <div class="form-group col-12">
                                        <label asp-for="Input.Email"></label>
                                        <input asp-for="Input.Email" class="form-control" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="row">
                                            <div class="col-6">
                                                <div class="row">
                                                    <div class="form-group col-12">
                                                        <label asp-for="Input.Password"></label>
                                                        <input asp-for="Input.Password" class="form-control" />
                                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="row">
                                                    <div class="form-group col-12">
                                                        <label asp-for="Input.ConfirmPassword"></label>
                                                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>                                                                      
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 mb-1">
                        <a asp-controller="User" asp-action="Index" class="btn btn-danger">Cancelar</a>
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>                    
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
